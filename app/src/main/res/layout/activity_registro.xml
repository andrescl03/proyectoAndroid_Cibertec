<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp"

    tools:context=".registroActivity">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="137dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="35dp"
        android:fontFamily="serif"
        android:text="@string/lblRCorreo"
        android:textSize="18sp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="137dp"
        android:layout_height="34dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginTop="90dp"
        android:fontFamily="serif"
        android:text="@string/lblRClave"
        android:textSize="18sp"
        android:typeface="sans" />

    <Button
        android:id="@+id/btnRegistrarse"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="28dp"
        android:layout_marginEnd="19dp"

        android:text="@string/btnRGrabar" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="135dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="214dp"
        android:fontFamily="serif"
        android:text="@string/lblREdad"
        android:textSize="18sp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="141dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="202dp"
        android:fontFamily="serif"
        android:text="@string/lblRSexo"
        android:textSize="18sp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="136dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="160dp"
        android:fontFamily="serif"
        android:text="@string/lblRDni"
        android:textSize="18sp"
        android:typeface="sans" />

    <EditText
        android:id="@+id/txtEdad"
        android:layout_width="193dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:inputType="date" />

    <EditText
        android:id="@+id/txtCorreo"
        android:layout_width="202dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/txtClave"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView8"
        android:layout_marginStart="22dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/textView7"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/txtDni"
        android:layout_width="201dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView11"
        android:ems="10"
        android:inputType="number" />

    <Spinner
        android:id="@+id/spnSexo"
        android:layout_width="113dp"
        android:layout_height="39dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView10"
        android:layout_marginEnd="74dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="72dp"
        android:layout_height="43dp"
        android:layout_above="@+id/btnRegistrarse"
        android:layout_alignEnd="@+id/btnRegistrarse"
        app:srcCompat="@drawable/iconoregistro" />

</RelativeLayout>