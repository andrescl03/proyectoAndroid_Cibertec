<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp"

    tools:context=".registroActivity">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="137dp"
        android:layout_height="32dp"
        android:layout_alignTop="@+id/txtRCorreo"
        android:layout_toStartOf="@+id/txtREdad"
        android:fontFamily="sans-serif"
        android:text="@string/lblRCorreo"
        android:textColor="#17B1E3"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="137dp"
        android:layout_height="34dp"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/txtRCorreo"
        android:fontFamily="sans-serif"
        android:text="@string/lblRClave"
        android:textColor="#17B1E3"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="131dp"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginBottom="220dp"
        android:fontFamily="sans-serif"
        android:text="@string/lblREdad"
        android:textColor="#17B1E3"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="112dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginBottom="168dp"
        android:fontFamily="sans-serif"
        android:text="@string/lblRSexo"
        android:textColor="#17B1E3"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="136dp"
        android:layout_height="34dp"
        android:layout_above="@+id/txtREdad"
        android:layout_alignStart="@+id/textView7"
        android:fontFamily="sans-serif"
        android:text="@string/lblRDni"
        android:textColor="#17B1E3"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <EditText
        android:id="@+id/txtREdad"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:inputType="date" />

    <EditText
        android:id="@+id/txtRCorreo"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="118dp"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/txtRClave"
        android:layout_width="191dp"
        android:layout_height="58dp"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="-12dp"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/txtRDni"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView11"
        android:layout_marginTop="-10dp"
        android:ems="10"
        android:inputType="number" />

    <Spinner
        android:id="@+id/spnRSexo"
        android:layout_width="164dp"
        android:layout_height="39dp"
        android:layout_alignBottom="@+id/textView10"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="72dp"
        android:layout_height="43dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp"
        app:srcCompat="@drawable/iconoregistro" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="123dp"
        android:layout_height="42dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif"
        android:text="@string/lblRNombre"
        android:textColor="#17B1E3"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="137dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginTop="67dp"
        android:fontFamily="sans-serif"
        android:text="@string/lblRApellido"
        android:textColor="#17B1E3"
        android:textSize="18sp"
        android:textStyle="bold" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentEnd="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txtRApellido"
            android:layout_width="321dp"
            android:layout_height="46dp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="193dp"
        android:layout_height="53dp"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentEnd="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txtRNombre"
            android:layout_width="match_parent"
            android:layout_height="42dp" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btnRRegistroU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="73dp"
        android:layout_marginStart="0dp"
        android:background="#5BC500"
        android:text="@string/btnRGrabar"
        android:textColor="@android:color/background_light" />

    <View
        android:id="@+id/divider2"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="138dp"
        android:background="@android:color/background_dark"
        android:backgroundTint="@color/colorPrimary"
        android:visibility="visible"

        />

    <View
        android:id="@+id/divider3"
        android:layout_width="2dp"
        android:layout_height="366dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="6dp"
        android:background="@android:color/background_dark"
        android:backgroundTint="@color/colorPrimary"
        android:visibility="visible" />

</RelativeLayout>