<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_principal"

    tools:context=".encuestaActivity">

    <Button
        android:id="@+id/btnESiguiente"
        android:layout_width="151dp"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:text="Siguiente"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/lblEPregunta"
        android:layout_width="355dp"
        android:layout_height="54dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:text="TextView"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <RadioGroup
        android:id="@+id/rbgEncuesta"
        android:layout_width="304dp"

        android:layout_height="290dp"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblEPregunta">

        <RadioButton
            android:id="@+id/rbtnE1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableStart="@drawable/muybuena"
            android:fontFamily="sans-serif"
            android:text="@string/rbtnEP"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="147dp" />


        <RadioButton
            android:id="@+id/rbtnE2"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:drawableStart="@drawable/buena"
            android:fontFamily="sans-serif"
            android:text="@string/rbtnEP"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="239dp"

            />


        <RadioButton
            android:id="@+id/rbtnE3"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:drawableStart="@drawable/regular"
            android:fontFamily="sans-serif"
            android:text="@string/rbtnEP"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="292dp"

            />

        <RadioButton
            android:id="@+id/rbtnE4"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:drawableStart="@drawable/mala"
            android:fontFamily="sans-serif"
            android:text="@string/rbtnEP"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="338dp" />

        <RadioButton
            android:id="@+id/rbtnE5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/muymala"
            android:fontFamily="sans-serif"
            android:text="@string/rbtnEP"
            android:textStyle="bold" />


    </RadioGroup>

</android.support.constraint.ConstraintLayout>