<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="1sp"
    android:layout_marginRight="1sp"
    android:background="@color/colorDivider"
    tools:context=".registroActivity">

    <View
        android:id="@+id/divider4"
        android:layout_width="fill_parent"
        android:layout_height="2dp"

        android:background="@android:color/background_dark"
        android:backgroundTint="@color/colorPrimary"
        android:visibility="visible" />

    <EditText
        android:id="@+id/txtREdad"
        android:layout_width="156dp"
        android:layout_height="49dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:hint="@string/lblREdad"
        android:inputType="date"
        app:layout_constraintBottom_toTopOf="@+id/btnRRegistroU"
        app:layout_constraintEnd_toStartOf="@+id/txtRDni"
        app:layout_constraintHorizontal_bias="0.205"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/txtRCorreo"
        android:layout_width="338dp"
        android:layout_height="69dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:hint="@string/lblRCorreo"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout2" />


    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout3"
        android:layout_width="191dp"
        android:layout_height="61dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtRCorreo"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/txtRClave"
            android:layout_width="188dp"
            android:layout_height="39dp"
            android:layout_alignBottom="@+id/textView8"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="-12dp"
            android:ems="10"
            android:hint="@string/lblRClave"
            android:inputType="textPassword" />
    </android.support.design.widget.TextInputLayout>

    <EditText
        android:id="@+id/txtRDni"
        android:layout_width="145dp"
        android:layout_height="49dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="@string/lblRDni"
        android:inputType="number"
        android:maxLength="8"
        app:layout_constraintBottom_toTopOf="@+id/btnRRegistroU"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout3"
        app:layout_constraintVertical_bias="1.0" />

    <Spinner
        android:id="@+id/spnRSexo"
        android:layout_width="152dp"
        android:layout_height="43dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/txtREdad"
        app:layout_constraintEnd_toStartOf="@+id/textInputLayout3"
        app:layout_constraintHorizontal_bias="0.904"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtRCorreo"
        app:layout_constraintVertical_bias="0.258" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout2"
        android:layout_width="329dp"
        android:layout_height="59dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txtRApellido"
            android:layout_width="321dp"
            android:layout_height="46dp"
            android:hint="@string/lblRApellido" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="328dp"
        android:layout_height="72dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txtRNombre"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:hint="@string/lblRNombre" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btnRRegistroU"
        android:layout_width="349dp"
        android:layout_height="44dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:background="#5BC500"
        android:text="@string/btnRGrabar"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.733"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/divider2"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@android:color/background_dark"
        android:backgroundTint="@color/colorPrimary"

        android:visibility="visible" />

    <View
        android:id="@+id/divider3"
        android:layout_width="2dp"
        android:layout_height="363dp"

        android:layout_marginTop="-6dp"
        android:background="@android:color/background_dark"
        android:backgroundTint="@color/colorPrimary"
        android:visibility="visible" />

    <View
        android:id="@+id/divider5"
        android:layout_width="2dp"
        android:layout_height="366dp"

        android:layout_marginTop="15dp"
        android:background="@android:color/background_dark"
        android:backgroundTint="@color/colorPrimary"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="98dp"
        android:layout_height="59dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/iconoregistro" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="218dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Ingrese sus datos:"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider2" />

</android.support.constraint.ConstraintLayout>